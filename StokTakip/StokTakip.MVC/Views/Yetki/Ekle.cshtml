@model StokTakip.Entities.Model.Yetki
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center;color:white; margin:15px;background-color:#4B5860">
    <h2><b>Yetki Ekle</b></h2>
</div>

<div style="margin:15px" class="form-group">
    @using (Html.BeginForm("Ekle", "Yetki", FormMethod.Post))
    {
        @Html.Label("Yetki Adı")
        @Html.TextBoxFor(x => x.YetkiAdi, new { @class = "form-control" })
        <br />
        @Html.Label("Yetki Açıklama")
        @Html.TextBoxFor(x => x.YetkiAciklama, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Yetki Ekle</button>
    }
</div>


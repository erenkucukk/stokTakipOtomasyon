@model StokTakip.Entities.Model.Marka
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="text-align:center;color:white; margin:15px;background-color:#4B5860">
    <h2><b>Marka Ekle</b></h2>
</div>

<div style="margin:15px" class="form-group">
    @using (Html.BeginForm("Ekle", "Marka", FormMethod.Post))
    {


        @Html.Label("Marka Adı")
        @Html.TextBoxFor(x => x.MarkaAdi, new { @class = "form-control" })
        <br />
        @Html.Label("Marka Açıklama")
        @Html.TextBoxFor(x => x.MarkaAciklama, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Marka Ekle</button>
    }
</div>
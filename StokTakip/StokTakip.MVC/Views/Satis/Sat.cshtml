@model StokTakip.Entities.Model.Sepet
@{
    ViewBag.Title = "Sat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="modal-header">
    <h2>Satış Ekranı</h2>
</div>

<div class="container">
    <div style="margin:15px" class="form-group">
        @using (Html.BeginForm("Sat", "Satis", FormMethod.Post))
        {
            <div class="modal-body">

                @Html.HiddenFor(x => x.SepetId)

                <div class="form-group">
                    <b>Personel Ad Soyad:</b> @Html.DisplayFor(x => x.Personel.PersonelAdi, new { @class = "form-control" })
                    @Html.DisplayFor(x => x.Personel.PersonelSoyadi, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <b>Ürün Adı:</b> @Html.DisplayFor(x => x.Urun.UrunAdi, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <b>Birim Fiyatı:</b> @Html.DisplayFor(x => x.BirimFiyat, new { @class = "form-control" })₺
                </div>
                <div class="form-group">
                    <b>Miktarı:</b> @Html.DisplayFor(x => x.Miktar, new { @class = "form-control" })
                </div>
                <div class="form-group text-center" style="font-size:20px; color:red">
                    <b>Toplam Fiyatı:</b> @Html.DisplayFor(x => x.ToplamFiyat, new { @class = "form-control" })₺
                </div>
            </div>
            <div class="modal-footer" style="float:right">
                <button class="btn btn-success">Sat</button>
                <a href="/Sepet/Index" class="btn btn-dark">Çıkış</a>
            </div>
        }
    </div>

</div>